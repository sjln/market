<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myApplication="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/standard_margin"
    android:layout_marginLeft="@dimen/standard_margin"
    android:layout_marginBottom="@dimen/standard_margin"
    android:layout_marginTop="@dimen/standard_margin"
    myApplication:cardElevation="@dimen/cardview_default_elevation"
    myApplication:cardCornerRadius="@dimen/corner_card_view_default_radius">
<android.support.constraint.ConstraintLayout
    android:layout_width="@dimen/layout_products_width"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/product_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_product_height"
        tools:src="@drawable/horse_newest_sample_image"/>

    <TextView
        android:id="@+id/content_product_main_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="@integer/max_line_products_main_page"
        android:paddingLeft="@dimen/standard_margin_x2"
        android:paddingRight="@dimen/standard_margin_x2"
        myApplication:layout_constraintEnd_toEndOf="parent"
        myApplication:layout_constraintStart_toStartOf="parent"
        myApplication:layout_constraintTop_toBottomOf="@+id/product_pic"
        android:gravity="right"
        tools:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد.لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد." />

    <TextView
        android:id="@+id/price_product_main_page"
        android:layoutDirection="ltr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/standard_margin"
        android:paddingLeft="@dimen/standard_margin"
        android:paddingBottom="@dimen/standard_margin"
        myApplication:layout_constraintStart_toStartOf="parent"
        myApplication:layout_constraintTop_toBottomOf="@+id/content_product_main_page"
        tools:text="1,100,000 تومان" />



</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
